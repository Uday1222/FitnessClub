@model User

@{
    ViewData["Title"] = "Delete User";
}

<div class="container pt-3">
    <h2>Delete User</h2>

    <h4>Are you sure you want to delete this user?</h4>

    <div>
        <h5>User Details</h5>
        <dl class="row">
            <dt class="col-sm-2">User Id</dt>
            <dd class="col-sm-10">@Model.UserId</dd>

            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">Age</dt>
            <dd class="col-sm-10">@Model.Age</dd>

            <dt class="col-sm-2">Gender</dt>
            <dd class="col-sm-10">@Model.Gender</dd>

            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.EmailId</dd>

            <dt class="col-sm-2">Subscription Type</dt>
            <dd class="col-sm-10">@Model.SubscriptionType</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="UserId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

